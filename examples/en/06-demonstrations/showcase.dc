# ========== 9. Complex calculations ==========
print("9. Complex calculations:")

fn calculate_sum_of_squares(n) {
    let sum = 0
    for i in range(1, n+1) {
        sum = sum + i * i
    }
    return sum
}

print("  Sum of squares from 1 to 5 =", calculate_sum_of_squares(5))
print()

# ========== 10. Combining all features ==========
print("10. Combining all features:")

fn is_prime(n) {
    if n < 2 {
        return false
    }
    for i in range(2, n) {
        if n % i == 0 {
            return false
        }
    }
    return true
}

fn count_primes_up_to(n) {
    count = 0
    for i in range(2, n+1) {
        if is_prime(i) {
            count = count + 1
        }
    }
    return count
}

print("  Prime numbers up to 20:")
for i in range(2, 21) {
    if is_prime(i) {
        print("    ", i)
    }
}
print("  Count of prime numbers up to 20 =", count_primes_up_to(20))
print()

