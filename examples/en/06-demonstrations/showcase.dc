# ========== 5. Recursion ==========
print("5. Recursion:")

fn factorial(n) {
    if n <= 1 {
        return 1
    }
    return n * factorial(n - 1)
}

fn fibonacci(n) {
    if n <= 1 {
        return n
    }
    return fibonacci(n - 1) + fibonacci(n - 2)
}

print("  factorial(5) =", factorial(5))
print("  fibonacci(7) =", fibonacci(7))
print()

# ========== 6. While loops ==========
print("6. While loops:")
let counter = 0
let sum_while = 0
while counter < 5 {
    sum_while = sum_while + counter
    counter = counter + 1
}
print("  Sum of numbers from 0 to 4 =", sum_while)
print()

# ========== 7. For loops ==========
print("7. For loops:")
let sum_for = 0
