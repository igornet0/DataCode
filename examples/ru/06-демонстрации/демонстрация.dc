# ========== 5. Рекурсия ==========
print("5. Рекурсия:")

fn factorial(n) {
    if n <= 1 {
        return 1
    }
    return n * factorial(n - 1)
}

fn fibonacci(n) {
    if n <= 1 {
        return n
    }
    return fibonacci(n - 1) + fibonacci(n - 2)
}

print("  factorial(5) =", factorial(5))
print("  fibonacci(7) =", fibonacci(7))
print()

