print("9. Комплексные вычисления:")

fn calculate_sum_of_squares(n) {
    let sum = 0
    for (let i = 1; i <= n; i = i + 1) {
        sum = sum + i * i
    }
    return sum
}

print("  Сумма квадратов от 1 до 5 =", calculate_sum_of_squares(5))
print()

# ========== 10. Комбинация всех возможностей ==========
print("10. Комбинация всех возможностей:")

fn is_prime(n) {
    if n < 2 {
        return false
    }
    if n == 2 {
        return true
    }
    for (let i = 2; i < n; i = i + 1) {
        let quotient = n / i
        if quotient * i == n {
            return false
        }
    }
    return true
}

fn count_primes_up_to(n) {
    let count = 0
    for (let i = 2; i <= n; i = i + 1) {
        if is_prime(i) {
            count = count + 1
        }
    }
    return count
}

print("  Простые числа до 20:")
for (let i = 2; i <= 20; i = i + 1) {
    if is_prime(i) {
        print("    ", i)
    }
}
print("  Количество простых чисел до 20 =", count_primes_up_to(20))
print()

